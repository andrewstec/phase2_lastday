
@{
    ViewBag.Title = "Forgot Password";
}
<div>
    @using (Html.BeginForm("ForgotPassword", "Home"))
    {

        <div class="form-horizontal login_cont">
            <h2 style="padding-top: 10px;">Forgot Your Password?</h2>
            <hr />
            <div class="form-group">
                <div class="col-md-4">
                    <p>
                        Submit your email address and we’ll send you a link to reset your password.
                    </p>
                </div>
            </div>

            <div class="form-group">
                

                <div class="col-md-4">
                    <label style="padding-bottom: 10px;" for="email" class="control-label">Email Address:</label><input type="text" name="email" id="email" class="form-control" />
                </div>
            </div>



            <div class="form-group">
                <div class="col-md-offset-2 col-md-10" style="padding:3px;">
                    <div class="g-recaptcha" data-sitekey=""></div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-4">
                    <input type="submit" value="Send" class="btn btn-primary" />
                </div>
            </div>

            @if (ViewBag.Error != null)
            {
            <div class="form-group">
                <div class="col-md-12">
                    <div class="alert alert-danger">
                        <strong>Error!</strong> @Html.Raw(ViewBag.Error)
                    </div>
                </div>
            </div>
            }

            @if (ViewBag.FakeEmailMessage != null)
            {
            <div class="form-group">
                <div class="col-md-12">
                    <div class="alert alert-success">
                        <strong>Success!</strong> @Html.Raw(ViewBag.FakeEmailMessage)
                    </div>
                </div>
            </div>
            }

        </div>
        
    }


</div>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

